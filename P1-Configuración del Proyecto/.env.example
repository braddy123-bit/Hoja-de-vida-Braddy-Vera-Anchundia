# ===========================================
# CONFIGURACIÓN DE ENTORNO - CV PROFESIONAL
# ===========================================

# Django Settings
SECRET_KEY=tu-secret-key-super-segura-aqui-cambiar-en-produccion
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Local - SQLite por defecto)
DATABASE_URL=sqlite:///db.sqlite3

# Database (Producción - PostgreSQL)
# DATABASE_URL=postgresql://usuario:password@host:5432/nombre_db

# Email Configuration (para recuperación de contraseñas)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password

# Storage Configuration
STORAGE_BACKEND=local
# Opciones: local, azure, s3

# Azure Storage (si usas Azure)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER_MEDIA=media
AZURE_STORAGE_CONTAINER_STATIC=static

# AWS S3 (si usas AWS)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Application Settings
MAX_UPLOAD_SIZE=5242880
# 5MB en bytes
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Security Settings (Producción)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# Render/Heroku Deployment
RENDER_EXTERNAL_HOSTNAME=
HEROKU_APP_NAME=

# Timezone & Language
TIME_ZONE=America/Guayaquil
LANGUAGE_CODE=es-ec

# Admin Superuser (para creación automática)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@cvprofesional.com
DJANGO_SUPERUSER_PASSWORD=admin123

# Feature Flags
ENABLE_PDF_DOWNLOAD=True
ENABLE_PUBLIC_CV=True
ENABLE_DARK_MODE=True
ENABLE_REFERENCES=True

# Analytics (opcional)
GOOGLE_ANALYTICS_ID=
